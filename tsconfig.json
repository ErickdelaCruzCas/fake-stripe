{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@founder/*": ["packages/founder/src/*"],
      "@fake-stripe/*": ["packages/fake-stripe-chaos/src/*"],
      "@temporal/*": ["packages/temporal-orchestrator/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "**/node_modules", "**/dist"]
}
