{
  "name": "@fake-stripe/founder",
  "version": "1.0.0",
  "description": "User context aggregator service with hexagonal architecture",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "start": "node dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "openapi:export": "ts-node scripts/export-openapi-spec.ts",
    "openapi:generate-client": "openapi-generator-cli generate -i openapi.yml -g typescript-axios -o ../generated-clients/founder --additional-properties=supportsES6=true,withInterfaces=true"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "axios": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "js-yaml": "^4.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.0.0",
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "jest": "^29.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
